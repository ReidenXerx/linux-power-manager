[Unit]
Description=Power Control Startup Service
Documentation=https://github.com/username/linux-power-manager
After=multi-user.target graphical-session.target
Wants=network.target

[Service]
Type=oneshot
ExecStart=/usr/local/bin/power-control-modular.sh startup
ExecStartPost=/usr/local/bin/power-control-modular.sh wifi-optimize
RemainAfterExit=yes
TimeoutStartSec=30
User=root
Environment=DISPLAY=:0

[Install]
WantedBy=multi-user.target
